<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.AppMainActivity"
    android:gravity="center"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textSize="38sp"
        android:text="User uid:"
        android:textColor="@color/black">
    </TextView>

    <TextView
        android:id="@+id/sila_sera_profile_uid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="123456789"
        android:textSize="20sp"
        android:textColor="@color/black">
    </TextView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hej Mati to Twoje dane?"
        android:textSize="30sp"
        android:textColor="@color/black">
    </TextView>
    <TextView
        android:id="@+id/ser_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="name"
        android:textSize="25sp"
        android:textColor="@color/black">
    </TextView>
    <TextView
        android:id="@+id/ser_lastname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="name"
        android:textSize="25sp"
        android:textColor="@color/black">
    </TextView>
    <TextView
        android:id="@+id/ser_height"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="name"
        android:textSize="25sp"
        android:textColor="@color/black">
    </TextView>
    <TextView
        android:id="@+id/ser_weight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="name"
        android:textSize="25sp"
        android:textColor="@color/black">
    </TextView>

</LinearLayout>