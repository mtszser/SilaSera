<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_marginTop="10dp">


    <com.mikhaellopez.circularimageview.CircularImageView
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:src="@drawable/profilowe"
        app:civ_border_color="@color/cheeseYellow"
        android:layout_gravity="center"
        app:civ_border_width="4dp">

    </com.mikhaellopez.circularimageview.CircularImageView>

    <TextView
        android:id="@+id/app_username"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:textSize="23sp"
        android:paddingTop="9dp"
        android:text="Mateusz Serafin"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:fontFamily="sans-serif-medium">
    </TextView>
    <TextView
        android:id="@+id/app_mail"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:textAlignment="center"
        android:textSize="13sp"
        android:text="mtszprowadzenie@gmail.com "
        android:textStyle="bold"
        android:fontFamily="sans-serif-medium">
    </TextView>
    
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="25dp"
        android:background="#E1DFDC">

    </View>


</LinearLayout>