<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.Cpm">

    <LinearLayout
        android:id="@+id/cpm_main_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:layout_gravity="center"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@color/cheeseYellow">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Całkowita Przemiana Materii"
                android:textStyle="bold"
                android:textAlignment="center"
                android:fontFamily="sans-serif-medium"
                android:textSize="26sp"
                android:textColor="#232222"
                android:padding="10dp">
            </TextView>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_margin="20dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/cpm_man"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/man"
                    android:padding="5dp">
                </ImageView>
                <ImageView
                    android:id="@+id/cpm_woman"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/woman"
                    android:padding="5dp">
                </ImageView>


            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Twoja waga(kg):"
                android:textAlignment="center"
                android:layout_marginBottom="10dp"
                android:fontFamily="sans-serif-medium"
                android:textSize="23sp"
                android:textColor="#3C3B3B">
            </TextView>
            <EditText
                android:id="@+id/cpm_weight"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#3C3B3B"
                android:textSize="23sp"
                android:padding="5dp"
                android:text="0.0"
                android:textAlignment="center"
                android:background="@drawable/cheese_rectangle"
                android:inputType="numberDecimal"
                android:layout_marginBottom="15dp">
            </EditText>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Twój wzrost(cm)"
                android:textAlignment="center"
                android:layout_marginBottom="10dp"
                android:fontFamily="sans-serif-medium"
                android:textSize="23sp"
                android:textColor="#3C3B3B">
            </TextView>
            <EditText
                android:id="@+id/cpm_height"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#3C3B3B"
                android:padding="5dp"
                android:text="0.0"
                android:background="@drawable/cheese_rectangle"
                android:textAlignment="center"
                android:inputType="numberDecimal"
                android:textSize="23sp"
                android:layout_marginBottom="15dp">
            </EditText>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Twój wiek(lat):"
                android:textAlignment="center"
                android:layout_marginBottom="10dp"
                android:fontFamily="sans-serif-medium"
                android:textSize="23sp"
                android:textColor="#3C3B3B">
            </TextView>
            <EditText
                android:id="@+id/cpm_age"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#3C3B3B"
                android:textSize="23sp"
                android:padding="5dp"
                android:text="0"
                android:textAlignment="center"
                android:background="@drawable/cheese_rectangle"
                android:inputType="number"
                android:layout_marginBottom="15dp">
            </EditText>

            <Button
                android:id="@+id/cpm_button"
                android:layout_width="150dp"
                android:focusable="true"
                android:clickable="true"
                android:layout_height="match_parent"
                android:background="@drawable/sign_button_1"
                android:text="Dalej">
            </Button>


        </LinearLayout>

    </LinearLayout>

</FrameLayout>