<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent"
    tools:context=".app.fragments.MyCPM2">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            app:cardCornerRadius="10dp"
            app:cardElevation="15dp"
            app:cardUseCompatPadding="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-medium"
                    android:text="Twoja PPM(podstawowa przemiana materii):"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/app_myCPM2_BMR"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="6dp"
                    android:fontFamily="sans-serif-medium"
                    android:text="2038kcal"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:textSize="28sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="5dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif-medium"
                        android:text="Dodaj współczynnik aktywności"
                        android:textAlignment="center"
                        android:textColor="@color/black"
                        android:textSize="16sp" />

                    <Spinner
                        android:id="@+id/app_mycpm2_pal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="20dp"
                        android:layout_marginBottom="15dp"
                        android:background="@drawable/cheese_rectangle"
                        android:popupBackground="@color/white"
                        android:textAlignment="center"
                        android:textColor="@color/black"
                        android:textSize="23sp" />

                    <androidx.cardview.widget.CardView
                        android:id="@+id/app_myCPM2_card"
                        android:padding="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:visibility="gone"
                        app:cardBackgroundColor="@color/cheeseYellow"
                        app:cardCornerRadius="10dp"
                        app:cardElevation="15dp"
                        app:cardUseCompatPadding="true">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_marginTop="5dp"
                            android:layout_height="wrap_content"
                            android:fontFamily="sans-serif-medium"
                            android:text="Twoja CPM(całkowita przemiana materii):"
                            android:textAlignment="center"
                            android:textColor="@color/black"
                            android:textSize="16sp" />

                        <TextView
                            android:id="@+id/app_myCPM2_cpm"
                            android:layout_marginTop="25dp"
                            android:padding="5dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="sans-serif-medium"
                            android:textAlignment="center"
                            android:textColor="@color/black"
                            android:textSize="20sp">

                        </TextView>


                    </androidx.cardview.widget.CardView>


                </LinearLayout>

            </LinearLayout>


        </androidx.cardview.widget.CardView>

    </RelativeLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center">

        <Button
            android:id="@+id/app_my_cpm_back"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:background="@drawable/rounded"
            android:text="Cofnij"
            android:layout_margin="10dp">
        </Button>

        <Button
            android:id="@+id/app_my_cpm_count"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:background="@drawable/rounded"
            android:text="Oblicz"
            android:layout_margin="10dp">
        </Button>
    </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">
            <Button
                android:id="@+id/app_my_cpm_save2"
                android:layout_width="150dp"
                android:layout_height="50dp"
                android:background="@drawable/rounded"
                android:text="Zapisz w profilu"
                android:layout_margin="10dp">
            </Button>
        </LinearLayout>

    </LinearLayout>


</FrameLayout>