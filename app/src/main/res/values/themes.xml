<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.SilaSera" parent="Theme.AppCompat.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/black</item>
        <item name="colorPrimaryVariant">@color/black</item>
        <item name="colorOnPrimary">@color/darkBlue</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <item name="android:navigationBarColor">@color/black</item>
        <!-- Customize your theme here. -->

        <!-- This is to enable transition. -->
        <item name="android:windowActivityTransitions">true</item>

        <!-- Setting up enter and exit transition. -->
        <item name="android:windowEnterTransition">@transition/trans_anim</item>
        <item name="android:fragmentExitTransition">@transition/trans_anim</item>
    </style>

